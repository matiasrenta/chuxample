<section id="widget-grid">
  <div class="row">
    <article class="col-xs-12">
      <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
        <header><span class="widget-icon"><i class="fa fa-table"></i></span>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-file'></i> #{t('simple_form.buttons.new')}"), new_cat_pgd_goal_path, class: 'btn btn-primary' if (can? :create, CatPgdGoal) %>
            <a href="javascript:void(0)" data-target="#filter-wid-id-0" id="filtrar" role="button" class="filter-button btn  <%= @filter_active ? 'btn-danger' : 'btn-primary' %>"><i class="fa fa-filter"></i> <%= @filter_active ? t('simple_form.buttons.filtering') : t('simple_form.buttons.filters') %></a>
          </div>
        </header>
        <div class="no-padding">
          <div class="jarviswidget-editbox filter-zone" id="filter-wid-id-0" style="display:none;">
            <div class="col-xs-12"><%= search_form_for(@q, html: {name: 'filter_form', class: 'form-inline'}) do |f| %>
                  <fieldset>
                    <div class="row">
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[key_cont]"><%= t('simple_form.labels.defaults.key') %></label>
                        <%= f.search_field :key_cont, label: false, class: "form-control input-sm" %>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[description_cont]"><%= t('simple_form.labels.defaults.description') %></label>
                        <%= f.search_field :description_cont, label: false, class: "form-control input-sm" %>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[cat_pgd_objective_id_cont]"><%= t('simple_form.labels.defaults.cat_pgd_objective') %></label>
                        <%= f.select :cat_pgd_objective_id_eq, options_from_collection_for_select(CatPgdObjective.all, :id, :description, @q.cat_pgd_objective_id_eq), {include_blank: true}, {class: "form-control input-sm"} %>
                      </div>
                    </div>
                    <div class="row pull-right">
                      <div class="col-sm-12">
                        <%= render "shared/submit_filters" %>
                      </div>
                    </div>
                  </fieldset>
              <% end %>
            </div>
          </div>
          <div class="widget-body">
            <table id="dt_basic" width="100%" class="display table table-striped table-bordered table-hover" style="margin:0 padding-top:0px">
              <thead>
              <tr>
                <th class='all control'><%= sort_link(@q, :key, t('simple_form.labels.defaults.key')) %></th>
                <th><%= sort_link(@q, :description, t('simple_form.labels.defaults.description')) %></th>
                <th><%= sort_link(@q, :cat_pgd_objective_name, t('simple_form.labels.defaults.cat_pgd_objective')) %></th>
                <th class="all"><%= t('simple_form.screen.actions') %></th>
              </tr>
              </thead>
              <tbody>
              <% @cat_pgd_goals.each do |cat_pgd_goal| %>
                  <tr>
                    <td><%= cat_pgd_goal.key %></td>
                    <td><%= cat_pgd_goal.description %></td>
                    <td><%= cat_pgd_goal.cat_pgd_objective.try(:description) %></td>
                    <td class="table-actions">
                      <%= render 'shared/action_icons', locals: {target: cat_pgd_goal} %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
            <div class="widget-footer">
              <%= render 'shared/pagination', locals: {target: @cat_pgd_goals, model_index_path: cat_pgd_goals_path} %>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>

