              <th><%= t('simple_form.labels.defaults.numero') %></th>
              <td>
                                    <%= @profile_obra.numero %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.colonia') %></th>
              <td>
                                    <%= @profile_obra.colonia %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.codigo_postal') %></th>
              <td>
                                    <%= @profile_obra.codigo_postal %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.tipo_obra') %></th>
              <td>
                                    <%= @profile_obra.tipo_obra %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.cantidad') %></th>
              <td>
                                                            <%= @profile_obra.cantidad %>
                                                  </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.importe') %></th>
              <td>
                                    <%= @profile_obra.importe %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.fecha_inicio') %></th>
              <td>
                                    <%= l(@profile_obra.fecha_inicio, :format => :long) if @profile_obra.fecha_inicio %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.fecha_fin') %></th>
              <td>
                                    <%= l(@profile_obra.fecha_fin, :format => :long) if @profile_obra.fecha_fin %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.avance_programado') %></th>
              <td>
                                    <%= @profile_obra.avance_programado %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.avance_real') %></th>
              <td>
                                    <%= @profile_obra.avance_real %>
                              </td>
            </tr>
                        </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>

