<section id="widget-grid">
  <div class="row">

    <!-- Nuevo show ahora con divs, ya no existe tabla -->
    <article class="col-sm-6">

      <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
        <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), open_data_path, class: 'btn btn-primary' %>
            <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_open_datum_path(@open_datum), class: 'btn btn-primary' if can?(:update, OpenDatum) %>
          </div>
        </header>
        <!-- widget div-->
        <div class="no-padding">

          <!-- widget content -->
          <div class="widget-body">

            <div class="form-group">
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.title') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.title %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.description') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.description %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.labels') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.labels %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.published_by') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.published_by %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.contact') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.contact %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.email') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.email %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.access_level') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @open_datum.access_level %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.file') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= link_to @open_datum.file_filename, attachment_url(@open_datum, :file) %> <%= "(#{file_size_with_meassure(@open_datum.file_size)} #{@open_datum.file_content_type})" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>

