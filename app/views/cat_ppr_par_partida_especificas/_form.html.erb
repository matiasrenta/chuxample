<div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
  <header>
    <h2><%= creating? ? "<i class='fa fa-file'></i>".html_safe : "<i class='fa fa-pencil'></i>".html_safe %></h2>

    <% if creating? %>
        <div class='widget-toolbar hidden-xs'>
          <a href='<%= new_import_cat_ppr_par_partida_especificas_path %>' role='button' class='btn btn-primary'><i class='fa fa-upload'></i>Carga masiva</a>
        </div>
    <% end %>

  </header>
  <div>
    <div class="widget-body">
      <%= simple_form_for @cat_ppr_par_partida_especifica, html: { class: 'form-horizontal' },
                          wrapper: :horizontal_form,
                          wrapper_mappings: {
                                  check_boxes: :horizontal_radio_and_checkboxes,
                                  radio_buttons: :horizontal_radio_and_checkboxes,
                                  file: :horizontal_file_input,
                                  boolean: :horizontal_boolean
                          } do |f| %>
          <div class="form-inputs edit">
                                    <%= f.input :key %>
                                                    <%= f.input :description, :input_html => { :rows => 4, :cols => 30 } %>
                                                                            <%= f.association :cat_ppr_par_partida_generica %>
                                    
            <div class="widget-footer">
              <div class="form-actions">
                <div class="btn-group">
                  <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), cat_ppr_par_partida_especificas_path, class: 'btn btn-default btn-sm' if can?(:read, CatPprParPartidaEspecifica) %>
                  <%= link_to raw("<i class='fa fa-binoculars'></i> #{t('simple_form.buttons.show')}"), @cat_ppr_par_partida_especifica, class: 'btn btn-default btn-sm' if can?(:read, CatPprParPartidaEspecifica) && updating? %>
                  <%= link_to raw("<i class='fa fa-trash'></i> #{t('simple_form.buttons.destroy')}"), @cat_ppr_par_partida_especifica, class: 'btn btn-default btn-sm', method: :delete, data: {confirm: 'Are you sure?', 'original-title': 'Destroy'} if can?(:destroy, CatPprParPartidaEspecifica) && updating? %>
                  <button type="submit" class="btn btn-primary btn-sm"><i class='fa fa-check-circle'></i> <%= creating? ? t('simple_form.buttons.create') : t('simple_form.buttons.update') %></button>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
