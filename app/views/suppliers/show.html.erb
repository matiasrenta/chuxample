<section id="widget-grid">
  <article class="col-sm-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), suppliers_path, class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_supplier_path(@supplier), class: 'btn btn-primary' if can?(:update, Supplier) %>
        </div>
      </header>
      <div class="no-padding">
        <!-- widget content -->
        <div class="widget-body">

          <div class="form-group">

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.razon_social') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.razon_social %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.name') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.name %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.rfc') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.rfc %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.calle') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.calle %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.nro_exterior') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.nro_exterior %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.nro_interior') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.nro_interior %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.entre_calles') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.entre_calles %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.state') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.state.try(:name) %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.town') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.town.try(:name) %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.codigo_postal') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.codigo_postal %></div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label">
                  <strong><%= t('simple_form.labels.defaults.observaciones') %></strong>
                </label>
                <div class="col-lg-9 details-data"><%= @supplier.observaciones %></div>
              </div>

            </div>

        </div>
      </div>
    </div>
  </article>

