              <th><%= t('simple_form.labels.defaults.rfc') %></th>
              <td>
                                    <%= @supplier.rfc %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.razon_social') %></th>
              <td>
                                    <%= @supplier.razon_social %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.name') %></th>
              <td>
                                    <%= @supplier.name %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.calle') %></th>
              <td>
                                    <%= @supplier.calle %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.nro_exterior') %></th>
              <td>
                                    <%= @supplier.nro_exterior %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.nro_interior') %></th>
              <td>
                                    <%= @supplier.nro_interior %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.entre_calles') %></th>
              <td>
                                    <%= @supplier.entre_calles %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.state') %></th>
              <td>
                                                            <%= @supplier.state.try(:name) %>
                                                  </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.town') %></th>
              <td>
                                                            <%= @supplier.town.try(:name) %>
                                                  </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.codigo_postal') %></th>
              <td>
                                    <%= @supplier.codigo_postal %>
                              </td>
            </tr>
                                        <tr role="row">
              <th><%= t('simple_form.labels.defaults.observaciones') %></th>
              <td>
                                    <%= @supplier.observaciones %>
                              </td>
            </tr>
                        </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>

