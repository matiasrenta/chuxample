<div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
  <header>
    <h2><%= creating? ? "<i class='fa fa-file'></i>".html_safe : "<i class='fa fa-pencil'></i>".html_safe %></h2>

    <% if creating? %>
        <div class='widget-toolbar hidden-xs'>
          <a href='<%= new_import_key_analyticals_path %>' role='button' class='btn btn-primary'><i class='fa fa-upload'></i>Carga
            masiva</a>
        </div>
    <% end %>

  </header>
  <div>
    <div class="widget-body">
      <%= simple_form_for @key_analytical, html: {class: 'form-horizontal'},
                          wrapper: :horizontal_form,
                          wrapper_mappings: {
                                  check_boxes: :horizontal_radio_and_checkboxes,
                                  radio_buttons: :horizontal_radio_and_checkboxes,
                                  file: :horizontal_file_input,
                                  boolean: :horizontal_boolean
                          } do |f| %>
          <div class="form-inputs edit">
            <%= f.association :cat_pgd_axi %>
            <%= f.association :cat_ere_expending_focu %>
            <%= f.association :cat_ere_result %>
            <%= f.association :cat_ere_subresult %>
            <%= f.input :year %>
            <%= f.input :sector %>
            <%= f.input :subsector %>
            <%= f.input :unidad_responsable %>
            <%= f.association :cat_cfu_finality %>
            <%= f.association :cat_cfu_function %>
            <%= f.association :cat_cfu_subfunction %>
            <%= f.association :cat_aci_institutional_activity %>
            <%= f.association :cat_fon_funding_source %>
            <%= f.association :cat_fon_generic_source %>
            <%= f.association :cat_fon_specific_source %>
            <%= f.association :cat_fon_year_document %>
            <%= f.association :cat_fon_origin_resource %>
            <%= f.association :cat_fon_fund %>
            <%= f.association :cat_ppr_par_chapter %>
            <%= f.association :cat_ppr_par_concept %>
            <%= f.association :cat_ppr_par_partida_generica %>
            <%= f.association :cat_ppr_par_partida_especifica %>
            <%= f.association :cat_ppr_expense_type %>
            <%= f.association :cat_ppr_digit_identifier %>
            <%= f.association :cat_ppr_spending_destination %>
            <%= f.input :proyecto_de_inversion %>
            <%= f.association :cat_are_area %>
            <%= f.input :autorizado %>
            <%= f.input :enero %>
            <%= f.input :febrero %>
            <%= f.input :marzo %>
            <%= f.input :abril %>
            <%= f.input :mayo %>
            <%= f.input :junio %>
            <%= f.input :julio %>
            <%= f.input :agosto %>
            <%= f.input :septiembre %>
            <%= f.input :octubre %>
            <%= f.input :noviembre %>
            <%= f.input :diciembre %>
            <%= f.association :cat_uni_measure_unit %>
            <%= f.input :meta_fisica %>
            <%= f.input :descripcion_de_las_acciones, :input_html => {:rows => 4, :cols => 30} %>
            <%= f.input :domicilio_del_area, :input_html => {:rows => 4, :cols => 30} %>
            <%= f.input :dut_de_la_accion, :input_html => {:rows => 4, :cols => 30} %>
            <%= f.input :poblacion_beneficiada %>
            <%= f.association :cat_der_human_right %>
            <%= f.association :cat_der_strategy %>
            <%= f.association :cat_der_line_of_action %>
            <%= f.input :justificacion_derechos_humanos, :input_html => {:rows => 4, :cols => 30} %>
            <%= f.input :porcentaje_igualdad_sustantiva %>
            <%= f.input :mujeres %>
            <%= f.input :hombres %>
            <%= f.association :cat_gen_axi %>
            <%= f.association :cat_gen_strategy %>
            <%= f.association :cat_gen_line_of_action %>
            <%= f.input :justificacion_genero, :input_html => {:rows => 4, :cols => 30} %>
            <%= f.association :cat_pgd_area_of_opportunity %>
            <%= f.association :cat_pgd_objective %>
            <%= f.association :cat_pgd_goal %>
            <%= f.association :cat_pgd_line_of_action %>

            <div class="widget-footer">
              <div class="form-actions">
                <div class="btn-group">
                  <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), key_analyticals_path, class: 'btn btn-default btn-sm' if can?(:read, KeyAnalytical) %>
                  <%= link_to raw("<i class='fa fa-binoculars'></i> #{t('simple_form.buttons.show')}"), @key_analytical, class: 'btn btn-default btn-sm' if can?(:read, KeyAnalytical) && updating? %>
                  <%= link_to raw("<i class='fa fa-trash'></i> #{t('simple_form.buttons.destroy')}"), @key_analytical, class: 'btn btn-default btn-sm', method: :delete, data: {confirm: 'Are you sure?', 'original-title': 'Destroy'} if can?(:destroy, KeyAnalytical) && updating? %>
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class='fa fa-check-circle'></i> <%= creating? ? t('simple_form.buttons.create') : t('simple_form.buttons.update') %>
                  </button>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
