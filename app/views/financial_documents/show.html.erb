<section id="widget-grid">
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), project_activity_path(@financial_document.project_activity), class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_financial_document_path(@financial_document), class: 'btn btn-primary' if can?(:update, FinancialDocument) %>
        </div>
      </header>
      <div>
        <!-- widget content -->
        <div class="widget-body">

          <table class="table table-striped table-hover grey-blue-table" width="100%" cellspacing="0" id="dt_basic">
            <tbody>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.doc_type') %></th>
              <td>
                <%= @financial_document.doc_type %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.code') %></th>
              <td>
                <%= @financial_document.code %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.provider') %></th>
              <td>
                <%= @financial_document.provider %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.doc_date') %></th>
              <td>
                <%= l(@financial_document.doc_date, :format => :long) if @financial_document.doc_date %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.amount') %></th>
              <td>
                <%= @financial_document.amount %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.project_activity') %></th>
              <td>
                <%= @financial_document.project_activity.try(:name) %>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>

