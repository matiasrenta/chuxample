<section id="widget-grid">
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), project_activity_obra_path(@financial_document.project_activityable), class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_financial_document_path(@financial_document), class: 'btn btn-primary' if can?(:update, FinancialDocument) %>
        </div>
      </header>
      <div>
        <!-- widget content -->
        <div class="widget-body">

          <table class="table table-striped table-hover grey-blue-table" width="100%" cellspacing="0" id="dt_basic">
            <thead><tr class="hidden"><th></th><th></th></tr></thead> <!-- el thead es necesario para que datatable no de error -->
            <tbody>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.financial_document_type') %></th>
              <td>
                <%= @financial_document.financial_document_type.try(:name) %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.nro_documento') %></th>
              <td>
                <%= @financial_document.nro_documento %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.fecha_expedicion') %></th>
              <td>
                <%= l(@financial_document.fecha_expedicion, :format => :long) if @financial_document.fecha_expedicion %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.fecha_finalizacion') %></th>
              <td>
                <%= l(@financial_document.fecha_finalizacion, :format => :long) if @financial_document.fecha_finalizacion %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.monto') %></th>
              <td>
                <%= @financial_document.monto %>
              </td>
            </tr>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.supplier') %></th>
              <td>
                <%= @financial_document.supplier.try(:name) %>
              </td>
            </tr>
            <% if @financial_document.grupo_factura? %>
                <tr role="row">
                  <th><%= t('simple_form.labels.defaults.financial_document_contract') %></th>
                  <td>
                    <%= @financial_document.financial_document_contract.try(:nro_documento) %>
                  </td>
                </tr>
            <% end %>
            <% if @financial_document.grupo_other? %>
                <tr role="row">
                  <th><%= t('simple_form.labels.defaults.description') %></th>
                  <td>
                    <%= @financial_document.description %>
                  </td>
                </tr>
            <% end %>
            <tr role="row">
              <th><%= t('simple_form.labels.defaults.file') %></th>
              <td>
                <%= link_to "Download file", attachment_url(@financial_document, :file) %>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>
</section>

