<section id="widget-grid">
  <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), users_path, class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_user_path(@user), class: 'btn btn-primary' if can?(:update, User) %>
        </div>
      </header>
      <div class="no-padding">
        <div class="widget-body">
          <table class="table table-striped table-hover grey-blue-table" width="100%" cellspacing="0" id="dt_basic">
            <thead><tr class="hidden"><th></th><th></th></tr></thead>
            <tbody>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.email') %></th>
                <td><%= @user.email %></td>
              </tr>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.name') %></th>
                <td><%= @user.name %></td>
              </tr>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.locale') %></th>
                <td><%= @user.locale %></td>
              </tr>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.time_zone') %></th>
                <td><%= @user.time_zone %></td>
              </tr>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.role') %></th>
                <td><%= @user.role.try(:name) %></td>
              </tr>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.only_api_access') %></th>
                <td><%= boolean_check_mark(@user.only_api_access) %></td>
              </tr>
              <tr role="row">
                <th><%= t('simple_form.labels.defaults.avatar') %></th>
                <td><%= image_tag attachment_url(@user, :avatar, :fill, 100, 100, fallback: "avatars/male.png") %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>
</section>
