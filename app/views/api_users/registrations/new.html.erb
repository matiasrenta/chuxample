<div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
  <header>
    <h2><%= creating? ? "<i class='fa fa-file'></i>".html_safe : "<i class='fa fa-pencil'></i>".html_safe %></h2>
  </header>
  <div>
    <div class="widget-body">
      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'},
                          wrapper: :horizontal_form,
                          wrapper_mappings: {
                                  check_boxes: :horizontal_radio_and_checkboxes,
                                  radio_buttons: :horizontal_radio_and_checkboxes,
                                  file: :horizontal_file_input,
                                  boolean: :horizontal_boolean
                          } do |f| %>
          <div class="form-inputs edit">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :name %>
            <% if current_user.try(:superuser?) %>
                <%= f.association :role, collection: roles_for_dropdown, input_html: {disabled: !can_change_user_role? } %>
            <% end %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
            <%= f.input :locale, as: :select, collection: available_locales_for_dropdown %>
            <%= f.input :time_zone, priority: /Mexico/, include_blank: true %>
            <%= render 'shared/dropzone_simple', locals: {f: f, field: :avatar, max_filesize: Sett['REFILE_FILESYSTEM_MAX_FILESIZE'].to_i} %>

            <div class="widget-footer">
              <div class="form-actions">
                <div class="btn-group">
                  <% if current_user.try(:superuser?) %>
                      <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), api_users_path, class: 'btn btn-default btn-sm' if can?(:read, ApiUser) %>
                      <%= link_to raw("<i class='fa fa-binoculars'></i> #{t('simple_form.buttons.show')}"), @api_user, class: 'btn btn-default btn-sm' if can?(:read, ApiUser) && updating? %>
                      <%= link_to raw("<i class='fa fa-trash'></i> #{t('simple_form.buttons.destroy')}"), @api_user, class: 'btn btn-default btn-sm', method: :delete, data: {confirm: 'Are you sure?', 'original-title': 'Destroy'} if can?(:destroy, ApiUser) && updating? %>
                  <% end %>
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class='fa fa-check-circle'></i> <%= "Registrarme" %>
                  </button>
                </div>
              </div>
            </div>
          </div>
      <% end %>
      <%= render "api_users/shared/links" %>
    </div>
  </div>
</div>





