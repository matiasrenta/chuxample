<section id="widget-grid">
  <article class="col-sm-6">
    <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
      <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

        <div class="widget-toolbar">
          <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), ley_articulos_path, class: 'btn btn-primary' %>
          <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_ley_articulo_path(@ley_articulo), class: 'btn btn-primary' if can?(:update, LeyArticulo) %>
          <%= link_to raw("<i class='fa fa-check-square'></i> Validar Documento"), validar_documento_ley_articulo_path(@ley_articulo), class: 'btn btn-warning btn-sm', method: :put, data: {confirm: '¿Está seguro de validar este documento?. Esta operación no puede revertirse.', 'original-title': 'Validar Documento'} if(can?(:validar_documento, LeyArticulo) && @ley_articulo.validado.blank? && !@ley_articulo.file_id.blank?) %>
        </div>
      </header>
      <div class="no-padding">
        <!-- widget content -->
        <div class="widget-body">

          <div class="form-group">

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.codigo') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @ley_articulo.codigo %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.name') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @ley_articulo.name %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.descripcion_de_documento') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @ley_articulo.descripcion_de_documento %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.periodo_actualizacion') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @ley_articulo.periodo_actualizacion %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.actualizado') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= l(@ley_articulo.actualizado, :format => :long) if @ley_articulo.actualizado %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.validado') %></strong>
              </label>
              <div class="col-lg-9 details-data">
                <% if @ley_articulo.validado %>
                    <%= l(@ley_articulo.validado, :format => :long) %>
                <% else %>

                <% end %>                
              </div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.detalle') %></strong>
              </label>
              <div class="col-lg-9 details-data"><%= @ley_articulo.detalle %></div>
            </div>

            <div class="row show-details">
              <label class="col-lg-3 col-md-4 control-label">
                <strong><%= t('simple_form.labels.defaults.file') %></strong>
              </label>
              <div class="col-lg-9 details-data">
                <%= link_to @ley_articulo.file_filename, attachment_url(@ley_articulo, :file) %> <%= "(#{friendly_file_size(@ley_articulo.file_size)} #{@ley_articulo.file_content_type})" unless @ley_articulo.file_id.blank? %>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </article>

  <%= render 'index_fraccions' %>

</section>

<script type="text/javascript">
  $('.show-details:even').addClass('striped-div');
</script>

